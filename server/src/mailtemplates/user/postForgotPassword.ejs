      .header img {
        max-width: 150px;
      }
      .content {
        padding: 20px;
        line-height: 1.6;
      }
      .footer {
        text-align: center;
        padding: 20px;
        font-size: 12px;
        color: #777;
      }
      .social-links img {
        width: 30px;
        margin: 0 5px;
      }
    </style>
